<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.threehmis.bjaj.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"  />

    <include layout="@layout/layout_menu_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fbfbfb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:background="#fbfbfb"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fbfbfb"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/btn_maps"
                android:gravity="center"
                android:textSize="12dp"
                android:text="工程分布"
                android:textColor="@color/tab_item" />

            <RadioButton
                android:id="@+id/notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fbfbfb"
                android:button="@null"
                android:drawableTop="@drawable/btn_notice"
                android:gravity="center"
                android:textSize="12dp"
                android:text="事项提醒"
                android:textColor="@color/tab_item" />

            <RadioButton
                android:id="@+id/count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fbfbfb"
                android:button="@null"
                android:drawableTop="@drawable/btn_count"
                android:gravity="center"
                android:textSize="12dp"
                android:text="统计查询"
                android:textColor="@color/tab_item" />
        </RadioGroup>
        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fbfbfb"
            android:button="@null"
            android:drawableTop="@drawable/mainmore"
            android:gravity="center"
            android:textSize="12dp"
            android:text="更 多"
            android:textColor="@color/tab_item" />
    </LinearLayout>
</LinearLayout>


